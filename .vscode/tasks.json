{
    "version": "2.0.0",
    //"isShellCommand": true,
    "tasks": [
        {
            "label": "Makefile",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "cd qmk_firmware; make womier/k66:default",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "download",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "python util/dk63/flash-firmware.py --vid 0c45 --pid 7010 .build/womier_k66_default.bin 0x200 --openocd 127.0.0.1:4444 --swd True",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": []
        }
    ]
}
